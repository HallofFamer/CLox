FROM opensuse/leap:latest

WORKDIR CLox-1.9.0

RUN zypper install -y git gcc-c++ cmake libcurl-devel libuv1.dev

RUN git clone https://github.com/HallofFamer/CLox.git

RUN cd CLox \
	&& mkdir build \
	&& cmake -S . -B ./build \
	&& cmake --build ./build --config Release \
	&& ./build/CLox test/benchmarks/fibonacci.lox \
    && cp build/CLox /usr/bin/

CMD ["CLox"]

# To run the REPL from container, use this command: docker run -w /CLox-1.9.0/CLox -i -t clox:opensuse
var x = 0;
println("Creating global variable x: " + x.toString());
x = 1;
println("Setting global variable x to: " + x.toString());

fun testLocal(){
    val y1 = 5;
    println("Creating immutable local variable y1: " + y1.toString());
    var y2 = 10;
    println("Creating mutable local variable y2: " + y2.toString());
    println("Sum of two variables is: " + (y1 + y2).toString());
    y2 = 20;
    println("Setting local variable y2 to 20, and sum is: " + (y1 + y2).toString());
    //println("Setting local variable y1 to 10, this should raise an error.");
    y1 = 10;
} 
testLocal();
using clox.std.util.Regex;

var regex = Regex("[Hh]ello [Ww]orld[!]?");
print("Creating regular expression pattern: ");
println(regex.toString());

var text = "ahem.. 'hello world!' ..";
print("Creating text: ");
println(text);
print("Text matches pattern: ");
println(regex.match(text));
print("Replace regular expression pattern: ");
println(regex.replace(text, "my friend"));
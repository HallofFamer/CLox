println("Testing reentrancy...");
var x = 0;
print("Variable x is originally: ");
println(x);
val f0 = fun(){
   x = x + 1;
};
f0.call0();
print("Variable x is now: ");
println(x);

var y = 1;
print("Variable y is originally: ");
println(y);
val f1 = fun(a) { 
    y = y + a;
};
f1.call(1);
print("Variable y is now: ");
println(y);
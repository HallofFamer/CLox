println("Testing number...");
//var num = Number();
print("Class name for int 1: ");
println(1.getClassName());
print("Class name for float 3.5: ");
println(3.5.getClassName());
print("Convert float 2.4 to int: ");
println(2.4.toInt());
print("Convert number -2.5 to string: ");
println((-2.5).toString());
print("Convert number -2 to absolute value: ");
println((-2).abs());
print("The ceil, floor and round values of 2.4 are: ");
println(2.4.ceil().toString() + ", " + 2.4.floor().toString() + ", " + 2.4.round().toString());
print("The greatest common divisor and least common multiple of 18 and 24 are: ");
println(18.gcd(24).toString() + ", " + 18.lcm(24).toString());
print("Raise number -2 to the power of 8: ");
println((-2).pow(8));
print("Value of exp(2) is: ");
println(2.exp());
print("Max and Min value of 2 and 3 is: ");
println(2.max(3).toString() + ", " + 2.min(3).toString());
print("Values of sqrt(8) and cbrt(8) are: ");
println(8.sqrt().toString() + ", " + 8.cbrt().toString());
print("Values of log(10), log10(10) and log2(10) are: ");
println(10.log().toString() + ", " + 10.log2().toString() + ", " + 10.log10().toString());
print("Values of sin(1), cos(1) and tan(1) are: ");
println(1.sin().toString() + ", " + 1.cos().toString() + ", " + 1.tan().toString());
print("Computing hypot(3, 4): ");
println(3.hypot(4));
print("Computing factorial(5): ");
println(5.factorial());


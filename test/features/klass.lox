class Point { 

    __init__(x, y){ 
        this.x = x;
        this.y = y;
    }

    class getHorizontal(x){ 
        return this(x, 0);
    }

    class getVertical(y){ 
        return this(0, y);
    }

    distance(p){ 
        return ((this.x - p.x).pow(2) + (this.y - p.y).pow(2)).sqrt();
    } 

    toString(){ 
        return "(" + this.x.toString() + ", " + this.y.toString() + ")";
    }
}

Point.origin = Point(0, 0);

val p = Point(1, 2);
println("Create point object p: " + p.toString());
